<section class="hero-unit container" data-hero-unit>
  <div class="container-inner hero-unit__content" data-search-box>
    <h1 class="hero-unit__title">
      {{t 'my_activities' }}
    </h1>
  </div>
</section>


<div class="container my-activities-page">
  <div class="container-inner">
    <nav class="my-activities-menu my-activities-menu--main">
      <ul class="my-activities-menu__items clearfix">
        {{#if help_center.request_management_enabled}}
          <li class="my-activities-menu__item">{{link 'requests' class='my-activities-menu__link'}}</li>
        {{/if}}
        <li class="my-activities-menu__item is-active">{{t 'contributions'}}</li>
        <li class="my-activities-menu__item">{{link 'subscriptions' class='my-activities-menu__link'}}</li>
      </ul>
    </nav>

    <nav class="my-activities-menu my-activities-menu--sub">
     <ul class="my-activities-menu__items clearfix">
        {{#each filters}}
          <li class="my-activities-menu__item {{#if selected}} is-active {{/if}}">
            {{#if selected}}
              {{name}}
            {{else}}
              <a href="{{url}}">{{name}}</a>
            {{/if}}
          </li>
        {{/each}}
      </ul>
    </nav>

    {{#if contributions}}
    <div class="my-activities-items">
      <div class="my-activities-items__head">
        <div class="my-activities-items__row">
          <div class="my-activities-items__col">{{t 'title'}}</div>
          <div class="my-activities-items__col">{{t 'vote_sum'}}</div>
          <div class="my-activities-items__col">{{t 'last_activity'}}</div>
          <div class="my-activities-items__col">{{t 'created'}}</div>
        </div>
      </div>
      <div class="my-activities-items__body">
        {{#each contributions}}
          <div class="my-activities-items__row my-activities-item">
            <div class="my-activities-items__col">
              <a class="my-activities-item__title" href="{{url}}">
                {{excerpt title characters=60}}
              </a>
            </div>
            <div class="my-activities-items__col my-activities-item__meta">
              {{vote_sum}}
            </div>
            <div class="my-activities-items__col my-activities-item__meta">{{date last_activity_at}}</div>
            <div class="my-activities-items__col my-activities-item__meta">{{date created_at}}</div>
          </div>
        {{/each}}
      </div>
    </div>
      {{pagination}}
    {{else}}
      <p>{{t 'no_contributions'}}</p>
    {{/if}}
  </div>
</div>
